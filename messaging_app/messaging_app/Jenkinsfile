pipeline {
    agent any
    
    tools {
        // ShiningPanda plugin provides python installations
        python "Python3"
    }

    environment {
        GITHUB_CREDS = credentials('github-creds')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-creds',
                    url: 'https://github.com/your-username/messaging-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                python -m venv venv
                . venv/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                . venv/bin/activate
                pytest --junitxml=report.xml --cov=.
                '''
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }
}